{
  "name": "hull-closeio",
  "version": "0.1.0",
  "description": "A Connector to integrate Close.io and Hull",
  "engines": {
    "node": "8.9.x",
    "npm": "5.5.x",
    "yarn": "1.3.x"
  },
  "scripts": {
    "build": "npm run clean && npm run build:server",
    "build:server": "babel server -d build",
    "test": "npm run test:lint && npm run test:flow && npm run test:integration && npm run test:unit",
    "test:lint": "eslint server",
    "test:flow": "flow check",
    "test:unit": "NODE_ENV=test jest ./test/unit",
    "test:integration": "NODE_ENV=test jest ./test/integration",
    "test:manifest": "jsonlint manifest.json -q",
    "start": "node -r newrelic build",
    "start:dev": "NODE_ENV=development babel-watch -L server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hull-ships/hull-closeio.git"
  },
  "keywords": [
    "hull",
    "hull-ship",
    "ship",
    "connector"
  ],
  "author": {
    "name": "Hull",
    "email": "contact@hull.io",
    "url": "https://github.com/hull"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hull-ships/hull-closeio/issues"
  },
  "homepage": "https://github.com/hull-ships/hull-closeio#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "cache-manager": "^2.5.0",
    "cors": "^2.8.4",
    "crypto": "^1.0.1",
    "express": "^4.16.2",
    "hull": "^0.13.4",
    "lodash": "^4.17.4",
    "luxon": "^0.0.18",
    "newrelic": "^2.0.2",
    "querystring": "^0.2.0",
    "request": "^2.83.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-watch": "^2.0.7",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "^0.58.0",
    "jest": "^21.2.1",
    "jsonlint": "^1.6.2",
    "nock": "^9.1.0",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest"
    }
  }
}
